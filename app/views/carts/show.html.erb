<h1> Your Cart:</h1>
<div class="bodycontent">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.menu.name %></td>
        <td class='center_table'>$<%= number_with_precision(dish.menu.price, :precision => 2) %></td>
        <td class='center_table'><%= link_to "Remove", {controller: 'carts', action: 'remove_item', id: dish.id}, method: 'post' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <% if @total == 0 %>
  <h4> Your cart is currently empty! </h4>
  <% else %>
  <h4> Your total is: <p class="total">$<%=  number_with_precision(@total, :precision => 2) %></p></h4>
  <%= link_to "Pay for Order", {controller: 'carts', action: 'order'}, method:"post" %>
  <% end %>


  <%= link_to "Back to Menu", menus_path %>
</div>
